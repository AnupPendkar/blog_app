{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@environment/*": ["src/environments/*"],
      "@hooks/*": ["src/hooks/*"],
      "@interceptors/*": ["src/interceptors/*"],
      "@models/*": ["src/models/*"],
      "@redux/*": ["src/redux/*"],
      "@services/*": ["src/services/*"],
      "@shared/*": ["src/shared/*"],
      "@views/*": ["src/views/*"]
    }
  },
  "include": ["vite.config.ts"]
}
